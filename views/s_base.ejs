
<%- include ("s_header") -%>

<div class="text-center center-div" id="signin">
    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Sign In</h2>
            <span>Sign in to your known user</span>
            <% if(locals.logout) { %>
            <div class="alter alter-success text-center">
                <%= logout %>
            </div>
            <% } %>
        </div>
        <form action="/s_base" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="email" name="email">
                <small class="form-text text-muted text-left">Registered email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="password" name="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
            <a href="/dashboard"><button type="button" class="btn btn-success rounded-pill">Register</button></a>
        </form>
    </div>
</div>

<%- include ("s_footer") -%>    